@model SP.Application.Dto.LoginDto.RegisterDto
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<section class="min-vh-100" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://cdn.shopify.com/s/files/1/0456/5070/6581/files/HP_SPORT_Fashion_VN.png?v=1731901461"
                                 alt="form đăng ký" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post">
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger">
                                            <ul>
                                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                                {
                                                    <li>@error.ErrorMessage</li>
                                                }
                                            </ul>
                                        </div>
                                    }

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-tshirt fa-2x me-3" style="color: black;"></i>
                                        <span class="h1 fw-bold mb-0">Super Sports</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Tạo tài khoản mới</h5>

                                    <div class="form-floating mb-4">
                                        <input type="text" id="userName" class="form-control form-control-lg" asp-for="UserName" required />
                                        <label for="userName">Tên người dùng</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="email" id="email" class="form-control form-control-lg" asp-for="Email" required />
                                        <label for="email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-4 position-relative">
                                        <input type="password" id="passwordInput" class="form-control form-control-lg" asp-for="Password" required />
                                        <label for="passwordInput">Mật khẩu</label>
                                        <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;" onclick="togglePassword(this)">
                                            <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                        </span>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-4 position-relative">
                                        <input type="password" id="confirmPasswordInput" class="form-control form-control-lg" asp-for="ConfirmPassword" required />
                                        <label for="confirmPasswordInput">Nhập lại mật khẩu</label>
                                        <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;" onclick="togglePassword(this)">
                                            <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                        </span>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>


                                    <div class="form-floating mb-4">
                                        <input type="text" id="phoneNumber" class="form-control form-control-lg" asp-for="PhoneNumber" required />
                                        <label for="phoneNumber">Điện thoại</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="date" id="dateOfBirth" class="form-control form-control-lg" asp-for="DateOfBirth" required />
                                        <label for="dateOfBirth">Ngày sinh</label>
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="text" id="addressDetail" class="form-control form-control-lg" asp-for="AddressDetail" required />
                                        <label for="addressDetail">Địa chỉ</label>
                                        <span asp-validation-for="AddressDetail" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Đăng ký</button>
                                    </div>
                                    <div class="mb-4">
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg btn-block">
                                            <i class="fas fa-arrow-left me-2"></i>Quay về trang chủ
                                        </a>
                                    </div>


                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Đã có tài khoản?
                                        <a asp-action="Login" asp-controller="Auth" class="small text-primary">Đăng nhập tại đây</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function togglePassword(element) {
        const input = element.parentElement.querySelector("input");
        const icon = element.querySelector("i");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye");
        }
    }
</script>

