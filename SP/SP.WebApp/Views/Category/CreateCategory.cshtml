@model SP.Application.Dto.CategoryDto.CategoryViewDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Create Category</h2>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" class="form-control" asp-for="CategoryName" required />
        </div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("GetAllCategory", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

