@model IEnumerable<SP.Application.Dto.BrandDto.BrandViewDto>
@{
    ViewData["Title"] = "GetAllBrand";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>GetAllBrand</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Danh sách thương hiệu</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên thương hiệu</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <td>@brand.Id</td>
                            <td>@brand.BrandName</td>
                            <td>
                                <!-- Thêm các nút thao tác như sửa, xóa ở đây -->
                                <a href="@Url.Action("EditBrand", "Admin", new { id = brand.Id })" class="btn btn-primary">Sửa</a>
                                <a href="@Url.Action("DeleteBrand", "Admin", new { id = brand.Id })" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

