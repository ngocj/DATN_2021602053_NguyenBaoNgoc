@model IEnumerable<SP.Application.Dto.EmployeeDto.EmployeeViewDto>
@{
    ViewData["Title"] = "GetAllEmployee";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<div class="user-management-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-users"></i> Quản lý nhân viên</h1>
            <div class="actions">
                <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm nhân viên
                </a>
                <button id="exportBtn" class="btn btn-info">
                    <i class="fas fa-file-export"></i> Xuất Excel
                </button>
            </div>
        </div>
        <p class="text-muted">Quản lý tất cả tài khoản nhân viên trong hệ thống</p>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Danh sách nhân viên</h5>
                <div class="search-box">
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm nhân viên...">
                    <i class="fas fa-search search-icon"></i>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="userTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên nhân viên</th>
                            <th>Email</th>
                            <th>SDT</th>
                            <th>Ngày sinh</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <div class="user-info">
                                        <div class="avatar">
                                            @{
                                                char firstChar = !string.IsNullOrEmpty(user.Name) ?
                                                user.Name.FirstOrDefault() : '?';
                                            }
                                            <span>@firstChar</span>
                                        </div>
                                        <div>
                                            <span class="user-name">@user.Name</span>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>@(user.DateOfBirth.HasValue ? user.DateOfBirth.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>
                                    @if (user.IsActive == true)
                                    {
                                        <span class="badge bg-success text-white">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-white">Đã khóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("ViewUser", "Admin", new { id = user.Id })"
                                           data-bs-toggle="tooltip" title="Xem chi tiết"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })"
                                           data-bs-toggle="tooltip" title="Chỉnh sửa"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger delete-user"
                                                data-bs-toggle="tooltip" title="Xóa nhân viên"
                                                data-id="@user.Id" data-name="@user.Name">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="pagination-container mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa nhân viên <strong id="userName"></strong>?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <a href="#" id="confirmDelete" class="btn btn-danger">Xác nhận xóa</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styles for user management page */
    .user-management-container {
        padding: 20px;
    }

    .page-header {
        margin-bottom: 25px;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 15px;
    }

        .page-header .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-header h1 {
            font-size: 24px;
            font-weight: 600;
            color: #333;
        }

        .page-header i {
            margin-right: 10px;
            color: #4e73df;
        }

    .card {
        border: none;
        margin-bottom: 30px;
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 15px 20px;
    }

    .search-box {
        position: relative;
        width: 300px;
    }

        .search-box input {
            padding-right: 35px;
            border-radius: 20px;
        }

    .search-icon {
        position: absolute;
        right: 12px;
        top: 10px;
        color: #aaa;
    }

    .table th {
        background-color: #f8f9fc;
        color: #5a5c69;
        font-weight: 600;
        border-top: none;
    }

    .table td {
        vertical-align: middle;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
    }

        .action-buttons .btn {
            width: 32px;
            height: 32px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .user-info {
        display: flex;
        align-items: center;
    }

    .avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: #4e73df;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 10px;
    }

    .user-name {
        font-weight: 500;
    }

    /* Hover effect on table rows */
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
    }

    /* Badge styles */
    .badge {
        font-weight: 500;
        padding: 5px 10px;
    }

    /* Button styles */
    .btn {
        border-radius: 4px;
        font-weight: 500;
    }

    .btn-success {
        background-color: #1cc88a;
        border-color: #1cc88a;
    }

        .btn-success:hover {
            background-color: #17a673;
            border-color: #169b6b;
        }

    .btn-info {
        background-color: #36b9cc;
        border-color: #36b9cc;
        color: white;
    }

        .btn-info:hover {
            background-color: #2c9faf;
            border-color: #2a96a5;
            color: white;
        }

    /* Pagination styles */
    .pagination-container {
        display: flex;
        justify-content: center;
    }

    .page-link {
        color: #4e73df;
    }

    .page-item.active .page-link {
        background-color: #4e73df;
        border-color: #4e73df;
    }
</style>

<script>
    $(document).ready(function () {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Search functionality
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#userTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        // Delete confirmation modal
        $(".delete-user").click(function () {
            var userId = $(this).data('id');
            var userName = $(this).data('name');

            $("#userName").text(userName);
            $("#confirmDelete").attr("href", "@Url.Action("DeleteUser", "Admin")/" + userId);
            $("#deleteModal").modal('show');
        });
    });
</script>

